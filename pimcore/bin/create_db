#!/usr/bin/env python3

import os
import sys
from environment import Environment

currentpath = os.getcwd()
composepath = os.path.abspath(os.path.dirname(sys.argv[0]) + '/../')

if len(sys.argv) <= 1:
    raise Exception('You must give a databasename')

env = Environment(composepath + '/.env')

cmd = [
    os.path.dirname(sys.argv[0]) + '/mysql',
    '-e',
    (
        'CREATE DATABASE ' + sys.argv[1] +
        ' DEFAULT CHARSET utf8mb4 DEFAULT COLLATE utf8mb4_general_ci'
    )
]

os.execvp(cmd[0], cmd)
